.modal-header
	h3.modal-title="选择身份"
.modal-body
	form.form-horizontal
		.form-group(ng-repeat="player in playerList track by $index", ng-hide="player.picked")
			.col-sm-12
				button.btn.btn-primary.form-control(ng-click="pickPlayer($index)")="{{player.nickname}}"
		.form-group
			.col-sm-12
				button.btn.btn-primary.form-control(ng-click="restart()")="重新开始"